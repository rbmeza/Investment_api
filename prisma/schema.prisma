datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String    
  firstName   String
  lastName    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())

  // Relaciones
  portfolio   Portfolio?
  movements   Movement[]
  transactions Transaction[]
}

model Portfolio {
  id               Int     @id @default(autoincrement())
  name             String
  stocksHeld       Json
  cash             Decimal @default(0.0) 

  // Relaci贸n con User
  userId           Int     @unique
  user             User    @relation(fields: [userId], references: [id]) 
  
  @@map("portfolios")
}

model Movement {
  id        Int      @id @default(autoincrement())
  type      MovementType
  amount    Decimal
  date      DateTime

  // Relaci贸n muchos a uno con User
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

// Para las 贸rdenes de compra/venta
model Transaction {
  id        Int      @id @default(autoincrement())
  stockSymbol String   
  type      TransactionType 
  quantity  Int
  price     Decimal
  date      DateTime

  // Relaci贸n muchos a uno con User
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Stock {
  id     Int    @id @default(autoincrement())
  symbol String @unique
  price  Decimal

  @@map("stocks")
}

// Enumeraciones de tipos
enum MovementType {
  DEPOSIT
  WITHDRAWAL
}

enum TransactionType {
  BUY
  SELL
}